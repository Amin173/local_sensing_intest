<?xml version="1.0"?>

<launch>
    <!-- Transforms -->
    <include file="$(find local_sensing_intest)/launch/transforms.launch"/>

    <!-- Map server -->
    <arg name="map_file" default="$(find local_sensing_intest)/map/map.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>
    <node name="map_point_cloud" pkg="local_sensing_intest" type="grid_to_pointcloud.py" output="screen"/>

    <!--    Rviz-->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find local_sensing_intest)/rviz/map_test_config.rviz"
          respawn="true"/>

</launch>
